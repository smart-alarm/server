<h1>Log In</h1>

<%= form_tag(:action => 'authenticate') do %>
	<div class="form-group">
		<td><%= label_tag(:email) %></td>
		<td><%= text_field_tag(:email) %></td>
	</div>
	<div class="form-group">
		<td><%= label_tag(:password) %></td>
		<td><%= password_field_tag(:password) %></td>
	</div>
	<%= submit_tag("Log In") %>
<% end %>

<%= link_to("Don't have an account? Create new account!", {:action => 'new'}) %>