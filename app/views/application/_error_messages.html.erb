<% if object && object.errors.size > 0 %>
	<div class="errorExplanation">
		<h2><%= pluralize(object.errors.size, "error") %> with this form</h2>
		<p>There were problems with the following fields:</p>
		<ul>
		<% object.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>